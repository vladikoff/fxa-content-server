<div id="change-email" class="settings-unit">
    <div class="settings-unit-stub">
        <header class="settings-unit-summary">
            <h2 class="settings-unit-title">{{#t}}Change Email{{/t}}</h2>
        </header>
        <button class="settings-button secondary settings-unit-toggle hidden"
                data-href="settings/change_email">{{#t}}Changeâ€¦{{/t}}</button>
    </div>

    <div class="settings-unit-details">
        <div class="error"></div>

        <form novalidate>
            <p>
                {{#t}}Once you change your email you will not be able to login with old credentials.{{/t}}
            </p>
            <!-- hidden email field is to allow Fx password manager
                 to correctly save the updated password. Without it,
                 the password manager saves the old_password
                 as the username. -->
            <input type="email" value="{{email}}" class="hidden" />
            <div class="input-row password-row">
                <label class="label-helper"></label>
                <input type="password" class="password" id="current_password" placeholder="{{#t}}Current password{{/t}}" required pattern=".{8,}" autofocus />
            </div>

            <div class="input-row password-row">
                <label class="label-helper"></label>
                <input type="text" class="email tooltip-below" id="new_email" placeholder="{{#t}}New Email{{/t}}" required />
            </div>

            <div class="button-row">
                <button type="submit" class="settings-button primary disabled">{{#t}}Change{{/t}}</button>
                <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>
            </div>
        </form>
    </div>
</div>

